<ul>
    {#userIds}
    <li>
        {@async-fragment dataProvider="userInfo" var="userInfo" arg-userId=. }
        <ul>
            <li>
                <b>Name:</b> {userInfo.name}
            </li>
            <li>
                <b>Gender:</b> {userInfo.gender}
            </li>
            <li>
                <b>Occupation:</b> {userInfo.occupation}
            </li>
        </ul>
        {/async-fragment}
    </li>
    {/userIds}
</ul>