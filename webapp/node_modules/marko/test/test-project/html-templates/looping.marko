<for each="item in ['a', 'b', 'c']">
    ${item}
</for>
<for each="item in ['a', 'b', 'c']" separator=", " status-var="loop">
    ${item} - ${loop.isFirst()} - ${loop.isLast()} - ${loop.getIndex()} - ${loop.getLength()}
</for>
<div for="item in ['red', 'green', 'blue']; separator = ', '; status-var=loop" >
    ${item} - ${loop.isFirst()} - ${loop.isLast()} - ${loop.getIndex()} - ${loop.getLength()}
</div>