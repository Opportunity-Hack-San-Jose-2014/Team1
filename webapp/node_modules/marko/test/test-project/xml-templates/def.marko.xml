<c-template>
    
    <def function="greeting(name)">
        <p class="greeting">Hello, ${name}!</p>
    </def>
    
    ${greeting("World")},
    ${greeting("Frank")}


    <def function="section(url, title, body)" body-param="body">
        <div class="section">
            <h1>
                <a href="$url">
                    $title
                </a>
            </h1>
            <p>
                ${body}
            </p>
        </div>
    </def>

    <invoke function="section" url="http://www.ebay.com/" title="ebay">
        <i>
            Visit eBay
        </i>
    </invoke>
</c-template>