<c-template 
    params="active">
    
    <test-popover>
        <c-attr name="title">Popover Title</c-attr>
        <c-attr name="content">Popover Content</c-attr>
        
        Link Text
    </test-popover>
    
    <div>
        <c-attr name="class" value="{?active;tab-active}"/>
        <c-attr name="align">center</c-attr>
    </div>
    
    <div>
        <c-attr name="title">
            <for each="color in ['red', 'green', 'blue']"> $color! </for>
        </c-attr>
    </div>
</c-template>